 <h1 style="color: red"><%= notice %></h1>
<section class="main">
  <div class="left">

  <div class="profile_info">
    <p>
      <img src="<%= @user.image_url %>" width="100px">
    </p>
  </div>
  </div>
  <div class="right">
    <p>
      <strong>Name:</strong>
      <%= @user.name %>
    </p>
    <p>
      <strong>About me:</strong>
      <%= @user.about_me %>
    </p>
    <p>
      <strong>City:</strong>
      <%= @user.city %>

  </div>
  <%= link_to("Meet Other Adventurers", users_path) %><br/>
  <% if @user.id == session[:user_id] %>
  <%= link_to 'Edit Profile', edit_user_path(@user) %>
  <%= link_to 'Delete Profile', user_path(session[:user_id]), method: :delete, data: { confirm: 'Are you sure you want to delete your profile?' } %>
  <% end %>
</section>
<section class="main">
    <h1>Sagas</h1>
    <% if @user.id == session[:user_id] %>
    <%= link_to("Create New Saga", new_saga_path) %>
    <%= link_to("Get Some Ideas", chapters_path) %><br/>
    <% end %>

    <% @sagas.each do |saga| %> </br>
    <%= link_to(saga.title, saga_path(saga.id)) %>
    <% @chapters.each do |chapter| %>
        <% if chapter.saga_id == saga.id %>
        <ul>
        <li><%= link_to(chapter.title, chapter_path(chapter.id)) %></li>
        </ul>
        <% end %>
      <% end %>
    <% end %>
</section>
