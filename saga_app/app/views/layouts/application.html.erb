<!DOCTYPE html>
<html>
<head>
  <title>SagaApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>


  <%= csrf_meta_tags %>
</head>
<body>
	<nav>
	    <% if session[:user_id] %>
		    <%= link_to 'SAGA', user_path(session[:user_id]), class: 'logo' %>
	    <% else %>
	    	<%= link_to 'SAGA', root_path, class: 'logo' %>
	    <% end %>
		<ul class="nav">
			<li class="signup"><%= link_to 'Sign Up', new_user_path %></li>
			<li class="login"><%= link_to 'Log In', login_path %></li>
		</ul>
	</nav>
<%= yield %>

</body>
</html>
